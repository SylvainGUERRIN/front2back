{#change form-bottom with clip-path#}
<div class="form-bottom"></div>

{% for label, messages in app.flashes %}
    <div class="container text-center mt-3">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
    </div>
{% endfor %}
