{% extends 'contributor/partials/base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <h1>Bienvenue sur votre dashboard</h1>
    <div class="container frame">
        <div class="row">
            <div class="col-12 mb-3">
                <h1>Vos statistiques</h1>
            </div>

            <div class="col-sm-12 col-md-4 mb-3">
                <a href="#" class="card text-white bg-primary">
                    <div class="card-body text-center">
                        <h3 class="card-title">Vos articles</h3>
                        <p class="number">{{ countVeilles }}</p>
                    </div>
                </a>
            </div>

            <div class="col-sm-12 col-md-4 mb-3">
                <a href="#" class="card text-white bg-primary">
                    <div class="card-body text-center">
                        <h3 class="card-title">Les commentaires sur vos articles</h3>
                        <p class="number">{{ countComments }}</p>
                    </div>
                </a>
            </div>

            <div class="col-sm-12 col-md-4 mb-3">
                <a href="#" class="card bg-primary">
                    <div class="card-body text-center">
                        <h3 class="card-title text-white">Vos articles les plus populaires</h3>
                        {% if topRated is not empty %}
                            {% for key,topRate in topRated %}
                                <p class="frame">
                                    {{ key }} : {{ topRate }} vues
                                </p>
                            {% endfor %}
                        {% else %}
                            <p class="frame">
                                Aucun article n'a été comptabilisé
                            </p>
                        {% endif %} %}
                    </div>
                </a>
            </div>

        </div>
    </div>
{% endblock %}
