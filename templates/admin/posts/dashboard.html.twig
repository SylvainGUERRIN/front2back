{% extends 'admin/partials/base.html.twig' %}

{% block title %}Gestion des veilles {% endblock %}

{% block body %}
    <div class="container frame">
        <div class="row">
            <div class="col-md-12 col-lg-9">
                <h1>Les dernières veilles </h1>
            </div>
            <div class="col-md-12 col-lg-3 cta-align">
                <a href="{{ path('admin_posts_create') }}" class="btn btn-primary">Créer une nouvelle veille</a>
            </div>
        </div>
    </div>
    <div class="container frame mt-5">
        <div class="row">
            <div class="col-12">
                <table class="table table-hover table-striped table-borderless table-responsive">
                    <thead>
                        <tr class="table-light">
                            <th>Image</th>
                            <th>Titre</th>
                            <th>Extrait</th>
                            <th>Créé le</th>
                            <th>Modifié le</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>
                                    {% if post.urlImage is not null %}
                                        <img class="img-fluid" src="{{ vich_uploader_asset(post, 'imageFile')}}" alt="image de la veille" width="150px" height="150px">
                                    {% else %}
                                        Cet article n'a pas encore d'image
                                    {% endif %}
                                </td>
                                <td>
                                    {{ post.title }}
                                </td>
                                <td>
                                    {{ post.excerpt }}
                                </td>
                                <td>
                                    {{ post.postCreatedAt | date("d/m/Y H:i:s") }}
                                </td>
                                <td>
                                    {% if post.postModifiedAt is not null %}
                                        {{ post.postModifiedAt | date("d/m/Y H:i:s") }}
                                    {% else %}
                                        Cette veille n'a pas encore été modifiée
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td>Mettre la pagination</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

