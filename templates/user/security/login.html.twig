{% extends 'site/partials/base.html.twig' %}

{% block title %}Connectez-vous!{% endblock %}

{% block body %}
<div class="container">
    <form method="post" name="login">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('security_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="mb-3 font-weight-normal">Veuillez vous connecter</h1>
        <label for="inputEmail" class="form-label">Votre mail</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        <label for="inputPassword" class="form-label">Votre mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control mb-3" required>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}
{#        first slug ok, use second for other feature   #}
        {% if slug == 'profile' %}
            <input type="hidden" name="_target_path" value="{{ path('account_profile') }}"/>
        {% elseif slug == 'home' %}
            <input type="hidden" name="_target_path" value="{{ path('home') }}"/>
        {% endif %}

        <button class="btn btn-lg btn-primary" type="submit">
            Se connecter
        </button>
    </form>
</div>
{% endblock %}
